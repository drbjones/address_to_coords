<h1>Coordinates Lookup</h1>

<form>
  <div>
    <label for="location" >Enter a location</label>
    <input name="location_lookup" type="text" id="location">
  </div>

  <div>
    <input name="location" type="submit" value="Lookup Coordinates">
  </div>
</form>

<dl>
  <dt>Address:</dt>
  <dd><%= @address %></dd>

  <dt>URL Safe Address:</dt>
  <dd><%= @url_safe_address %></dd>

  <dt>Latitude:</dt>
  <dd><%= @latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @longitude %></dd>
</dl>
